<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cubbi" parent="Theme.Material3.DayNight.NoActionBar">
        <!--    Primary brand color.    -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--    Secondary brand color.    -->
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorSecondaryVariant">@color/app_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--    Status bar color.    -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--    Customize your light theme here    -->
        <item name="android:windowBackground">@color/grey</item>
    </style>

    <style name="Theme.Cubbi" parent="Base.Theme.Cubbi" />
</resources>